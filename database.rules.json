{
  "rules": {
    ".read": "auth != null",
    ".write": "auth != null",
    "messages": {
      "$requestId": {
        ".indexOn": ["timestamp"],
        "$messageId": {
          ".read": "auth != null",
          ".write": "auth != null && newData.child('senderId').val() == auth.uid",
          ".validate": "newData.hasChildren(['senderId', 'text', 'timestamp'])"
        }
      }
    },
    "onlineUsers": {
      "$userId": {
        ".read": "auth != null",
        ".write": "auth != null && $userId == auth.uid"
      }
    }
  }
}
